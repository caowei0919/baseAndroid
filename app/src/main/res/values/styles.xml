    <style name="customDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#ffffff</item> <!--  菜单字体颜色-->
        <item name="android:textSize">18sp</item> <!-- 菜单字体大小-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/c_00000000</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="window_bottom_in_bottom_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <style name="window_left_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="window_left_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>

    <style name="window_right_in_right_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_right</item>
    </style>

    <style name="window_right_in_left_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_left</item>
    </style>

    <style name="dialog_scale_animstyle">
        <item name="android:windowEnterAnimation">@anim/scale_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_dialog_out_anim</item>
    </style>

    <style name="window_top_in_top_out">
        <item name="android:windowEnterAnimation">@anim/dialog_in_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_top</item>
    </style>

    <!--2. 主题样式-->
    <style name="App_RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/app_rating_stars</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">@dimen/W60</item>
        <item name="android:maxHeight">@dimen/H60</item>
    </style>

    <!--从下往上弹框-->
    <style name="CommonDialogB_T" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/CommonDialog.AnimationStyleB_T</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CommonDialog.AnimationStyleB_T" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_dialog_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/ui_dialog_out_to_bottom</item>
    </style>

</resources>
