<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/icon_group_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H280">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_item_referees"
        android:layout_marginLeft="@dimen/W170"
        android:layout_marginRight="@dimen/W20"
        android:layout_marginTop="@dimen/H24"
        android:layout_marginBottom="@dimen/H24">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/W8"
            android:layout_marginRight="@dimen/W20"
            android:layout_marginTop="@dimen/H20"
            android:layout_marginBottom="@dimen/H12">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>