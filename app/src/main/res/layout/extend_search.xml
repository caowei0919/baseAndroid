<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/H24"
        android:layout_marginLeft="@dimen/W20"
        android:text="@string/search_history"
        android:textSize="14sp"
        android:textColor="@color/c_585858">
    </TextView>

    <ImageView
        android:id="@+id/img_deleteHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_delete_address"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/H24"
        android:paddingRight="@dimen/W20"
        android:paddingLeft="@dimen/W20">
    </ImageView>

    <com.zj.wz.wbyx.baseandroid.view.FlowLayout
        android:id="@+id/flow_searchHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_deleteHistory"
        android:layout_marginTop="@dimen/H32"
        android:layout_marginLeft="@dimen/W20"
        android:layout_marginRight="@dimen/W20">
    </com.zj.wz.wbyx.baseandroid.view.FlowLayout>
</RelativeLayout>