<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_item_referees">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:layout_marginLeft="@dimen/W20"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginBottom="@dimen/H24"
            android:textSize="12sp">
        </TextView>

        <TextView
            android:id="@+id/tv_creatTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/c_333333"
            android:layout_marginLeft="@dimen/W20"
            android:layout_gravity="center_vertical">
        </TextView>

        <TextView
            android:layout_width="@dimen/W1"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/W20"
            android:textColor="@color/c_FF3333"
            android:layout_marginLeft="@dimen/W20"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_F6F6F6">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_F6F6F6">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/W1"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_totalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/c_333333"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginBottom="@dimen/H24">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_up_to"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/W20"
            android:textColor="@color/c_333333"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginBottom="@dimen/H24">
        </TextView>

        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/W8"
            android:textColor="@color/c_333333"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginRight="@dimen/W12"
            android:layout_marginBottom="@dimen/H24">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_F6F6F6">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/H20"
        android:layout_marginBottom="@dimen/H20">

        <TextView
            android:id="@+id/tv_sureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/icon_time_order"
            android:drawablePadding="@dimen/W12"
            android:visibility="gone"
            android:textColor="@color/c_FF3333"
            android:layout_marginTop="@dimen/H34"
            android:layout_marginBottom="@dimen/H34"
            android:layout_marginLeft="@dimen/W20">
        </TextView>

        <TextView
            android:layout_width="@dimen/H1"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_handleOne"
            android:layout_width="@dimen/W120"
            android:layout_height="@dimen/H56"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/W20"
            android:textColor="@color/c_999999"
            android:background="@drawable/shape_location">
        </TextView>

        <TextView
            android:id="@+id/tv_handleTwo"
            android:layout_width="@dimen/W120"
            android:layout_height="@dimen/H56"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/c_FF3333"
            android:layout_marginRight="@dimen/W20"
            android:background="@drawable/shape_order_pay">
        </TextView>
    </LinearLayout>
</LinearLayout>