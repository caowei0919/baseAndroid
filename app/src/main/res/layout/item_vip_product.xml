<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100"
    android:background="@drawable/selector_vip_product">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/icon_vip"
        android:layout_marginLeft="@dimen/W24"
        android:drawablePadding="@dimen/W16"
        android:textSize="16sp"
        android:textColor="@color/c_333333"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/W24"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:textColor="@color/c_FF3333">
    </TextView>
</RelativeLayout>