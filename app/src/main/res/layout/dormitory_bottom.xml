<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H128"
    android:paddingLeft="@dimen/W20"
    android:paddingRight="@dimen/W20">

    <TextView
        android:id="@+id/tv_spare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H40"
        android:background="@color/c_FFF9E1"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/c_895B0A">
    </TextView>

    <RelativeLayout
        android:layout_width="@dimen/W520"
        android:layout_height="@dimen/H88"
        android:layout_below="@id/tv_spare"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_dormitory_left">

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/W180"
            android:text="@string/rmb"
            android:textColor="@color/c_FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/H16">
        </TextView>

        <TextView
            android:id="@+id/tv_payMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_rmb"
            android:layout_marginLeft="@dimen/W8"
            android:layout_alignBottom="@id/tv_rmb"
            android:textColor="@color/c_FFFFFF"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/tv_serviceMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rmb"
            android:layout_alignLeft="@id/tv_rmb"
            android:layout_marginBottom="@dimen/H12"
            android:textSize="10sp"
            android:textColor="@color/c_C3C3C3">
        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_toPay"
        android:layout_width="@dimen/W190"
        android:layout_height="@dimen/H88"
        android:layout_below="@id/tv_spare"
        android:text="@string/go_settlement"
        android:gravity="center"
        android:textColor="@color/c_FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:background="@drawable/selector_dormitory_pay">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_dormitory_shopcar"
        android:layout_marginTop="@dimen/H12"
        android:layout_marginLeft="@dimen/W32">
    </ImageView>
</RelativeLayout>