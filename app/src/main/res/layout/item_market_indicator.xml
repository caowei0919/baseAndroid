<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical">

    <ImageView
        android:id="@+id/img_menuPicture"
        android:layout_width="@dimen/W120"
        android:layout_height="@dimen/H120"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY">
    </ImageView>


    <TextView
        android:id="@+id/tv_menuName"
        android:layout_width="@dimen/W150"
        android:layout_below="@id/img_menuPicture"
        android:layout_height="@dimen/H50"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/c_1B1B1B"
        android:layout_marginTop="@dimen/H14">
    </TextView>

</LinearLayout>