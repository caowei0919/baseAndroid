<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_F5F5F5"
    android:layout_height="match_parent">

    <include layout="@layout/title"
        android:id="@+id/layout_title"/>

    <TextView
        android:id="@+id/tv_localNews"
        android:layout_below="@id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/local_news"
        android:textSize="12sp"
        android:textColor="@color/c_666666"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginTop="@dimen/H10"
        android:layout_marginBottom="@dimen/H10">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_FFFFFF"
        android:layout_below="@id/tv_localNews">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_service_message_notification"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/W24"
            android:layout_marginBottom="@dimen/H24"
            android:layout_marginTop="@dimen/H24"
            android:textColor="@color/c_333333">
        </TextView>

        <com.zj.wz.wbyx.baseandroid.view.SwitchButton
            android:id="@+id/switch_news"
            android:layout_width="@dimen/W88"
            android:layout_height="@dimen/H44"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W24"
            app:sb_background="@color/c_CCCCCC"
            app:sb_checked_color="@color/c_FF3333"
            app:sb_show_indicator="false">
        </com.zj.wz.wbyx.baseandroid.view.SwitchButton>

    </RelativeLayout>
</RelativeLayout>