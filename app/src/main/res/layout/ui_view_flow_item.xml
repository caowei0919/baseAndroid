<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_flow_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--每个单选按钮-->
        <com.zj.wz.wbyx.baseandroid.view.FlowCheckBox
            android:id="@+id/single_select_chk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/H10"
            android:layout_marginBottom="@dimen/H10"
            android:layout_marginLeft="@dimen/W24"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/ui_flowlayout_item_bg_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/W20"
            android:paddingTop="@dimen/H16"
            android:paddingRight="@dimen/W20"
            android:paddingBottom="@dimen/H16"
            android:singleLine="true"
            android:textColor="@color/ui_flowlayout_item_text_bg"
            android:textSize="14sp"
            app:drawableHeight="@dimen/H40"
            app:drawableWidth="@dimen/W40" />

        <TextView
            android:id="@+id/single_select_no_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/H10"
            android:layout_marginBottom="@dimen/H10"
            android:background="@drawable/ui_flow_view_no_goods_bg"
            android:clickable="false"
            android:gravity="center"
            android:paddingLeft="@dimen/W20"
            android:paddingTop="@dimen/H16"
            android:paddingRight="@dimen/W20"
            android:paddingBottom="@dimen/H16"
            android:text="缺货"
            android:textColor="@color/c_FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>
