<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H1"
        android:layout_weight="1"
        android:background="@color/c_EEEEEE">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/H1"
        android:background="@color/c_BABABA">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H100"
        android:background="@color/c_F8F6F6"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_F8F6F6"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="@dimen/W1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="@dimen/H10"
                android:drawableTop="@drawable/selector_home"
                android:gravity="center"
                android:text="@string/tab_home"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10sp">
            </RadioButton>

            <RadioButton
                android:id="@+id/rb_members"
                android:layout_width="@dimen/W1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="@dimen/H10"
                android:drawableTop="@drawable/selector_members"
                android:gravity="center"
                android:text="@string/tab_members"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10sp">
            </RadioButton>

            <RadioButton
                android:id="@+id/rb_shopCar"
                android:layout_width="@dimen/W1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="@dimen/H10"
                android:drawableTop="@drawable/selector_shop"
                android:gravity="center"
                android:text="@string/tab_shop_car"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10sp">
            </RadioButton>

            <RadioButton
                android:id="@+id/rb_mine"
                android:layout_width="@dimen/W1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="@dimen/H10"
                android:drawableTop="@drawable/selector_mine"
                android:gravity="center"
                android:text="@string/tab_mine"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="10sp">
            </RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/W1"
                android:layout_weight="5"
                android:layout_height="@dimen/W1">
            </TextView>

            <TextView
                android:id="@+id/tv_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="@dimen/W1"
                android:layout_weight="2"
                android:layout_height="@dimen/W1">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>