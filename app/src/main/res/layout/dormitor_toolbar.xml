<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100">

    <RelativeLayout
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_to_select_addr"
            android:singleLine="true"
            android:maxWidth="@dimen/W300"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/c_FFFFFF"
            android:textSize="16sp">
        </TextView>

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/tv_location"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/W12"
            android:src="@mipmap/icon_address">
        </ImageView>

        <ImageView
            android:id="@+id/img_locationRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_location"
            android:layout_marginLeft="@dimen/W12"
            android:src="@mipmap/img_drop_down_white">
        </ImageView>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/img_back_white"
            android:paddingLeft="@dimen/W20"
            android:paddingRight="@dimen/W20"
            android:layout_alignParentLeft="true">
        </ImageView>
    </RelativeLayout>
</RelativeLayout>