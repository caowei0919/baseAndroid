<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginTop="@dimen/H20">
    </TextView>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_toRightOf="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:layout_marginLeft="@dimen/W40"
        android:layout_marginTop="@dimen/H20">
    </TextView>

    <TextView
        android:id="@+id/tv_detailAddress"
        android:layout_below="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:layout_marginLeft="@dimen/W24"
        android:layout_marginTop="@dimen/H20">
    </TextView>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:layout_below="@id/tv_detailAddress"
        android:background="@color/c_EEEEEE"
        android:layout_marginTop="@dimen/H20">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H84"
        android:layout_below="@id/tv_line">

        <CheckBox
            android:id="@+id/checkbox_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/W24"
            android:text="@string/address_default"
            android:textColor="@color/c_DB2F2F"
            android:textSize="14sp"
            android:paddingLeft="@dimen/W24"
            android:button="@drawable/selector_default_address">
        </CheckBox>

        <TextView
            android:id="@+id/tv_write"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_delete"
            android:drawableLeft="@mipmap/img_write_address"
            android:drawablePadding="@dimen/W16"
            android:layout_marginRight="@dimen/W52"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="@string/address_write">
        </TextView>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:gravity="center"
            android:drawableLeft="@mipmap/img_delete_address"
            android:drawablePadding="@dimen/W16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W64"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            android:text="@string/address_delete">
        </TextView>
    </RelativeLayout>

</RelativeLayout>