<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100"
    android:background="@color/c_FFFFFF">

    <TextView
        android:id="@+id/tv_addUpTo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/add_up_to"
        android:layout_marginLeft="@dimen/W30"
        android:textSize="14sp"
        android:textColor="@color/c_333333">
    </TextView>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/tv_addUpTo"
        android:layout_marginLeft="@dimen/W8"
        android:textSize="14sp"
        android:textColor="@color/c_FF3333">
    </TextView>

    <TextView
        android:id="@+id/tv_toPay"
        android:layout_width="@dimen/W210"
        android:layout_height="match_parent"
        android:background="@drawable/enable_login"
        android:layout_alignParentRight="true"
        android:text="@string/to_pay"
        android:gravity="center"
        android:textColor="@color/c_FFFFFF"
        android:textSize="16sp">
    </TextView>
</RelativeLayout>