<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/user_info_head"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_changeAvatar"
        android:layout_width="@dimen/W180"
        android:layout_height="@dimen/H180"
        android:src="@mipmap/img_default"
        app:civ_border_width="@dimen/W8"
        app:civ_border_color="@color/c_FAA5A5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/H46"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/W45"
        android:text="@string/click_to_change_avatar"
        android:layout_below="@id/img_changeAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/H28"
        android:textSize="14sp"
        android:textColor="@color/c_FFFFFF">
    </TextView>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/H22"
        android:paddingTop="@dimen/H16"
        android:paddingBottom="@dimen/H16"
        android:paddingLeft="@dimen/W40"
        android:visibility="gone"
        android:paddingRight="@dimen/W40"
        android:layout_marginRight="@dimen/W40"
        android:text="@string/save"
        android:textSize="14sp"
        android:textColor="@color/c_FFFFFF">
    </TextView>
</RelativeLayout>