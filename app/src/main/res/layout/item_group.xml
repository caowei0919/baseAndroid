<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_item_referees">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_groupTime"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_group_time"
            android:layout_marginLeft="@dimen/W20"
            android:layout_gravity="center_vertical">
        </ImageView>

        <TextView
            android:id="@+id/tv_groupTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/H24"
            android:layout_marginBottom="@dimen/H24"
            android:layout_marginLeft="@dimen/W16">
        </TextView>

        <TextView
            android:layout_width="@dimen/W1"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/tv_groupStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_FF4444"
            android:layout_marginRight="@dimen/W20"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_EBEBEB">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/H32">

        <ImageView
            android:id="@+id/img_group"
            android:layout_width="@dimen/W200"
            android:layout_height="@dimen/H200"
            android:src="@mipmap/img_default"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/H28"
            android:layout_marginLeft="@dimen/W20">
        </ImageView>

        <ImageView
            android:id="@+id/img_isColonel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_colonel">
        </ImageView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_group"
            android:layout_marginLeft="@dimen/W32"
            android:layout_alignTop="@id/img_group"
            android:layout_marginRight="@dimen/W20"
            android:textSize="16sp"
            android:textColor="@color/c_333333">
        </TextView>

        <TextView
            android:id="@+id/tv_retail"
            android:layout_below="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/c_AAAAAA"
            android:text="@string/the_retail_price"
            android:layout_toRightOf="@id/img_group"
            android:layout_marginLeft="@dimen/W32"
            android:layout_marginTop="@dimen/H20">
        </TextView>

        <TextView
            android:id="@+id/tv_retailPrice"
            android:layout_below="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/c_AAAAAA"
            android:layout_toRightOf="@id/tv_retail"
            android:layout_marginLeft="@dimen/W4"
            android:layout_marginTop="@dimen/H20">
        </TextView>

        <TextView
            android:id="@+id/tv_vipPrice"
            android:layout_below="@id/tv_retail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_group"
            android:layout_marginLeft="@dimen/W32"
            android:layout_marginTop="@dimen/H2"
            android:textSize="22sp"
            android:textColor="@color/c_FF4444">
        </TextView>

        <TextView
            android:id="@+id/tv_groupNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_vipPrice"
            android:layout_below="@id/tv_retailPrice"
            android:layout_marginTop="@dimen/H14"
            android:layout_marginLeft="@dimen/W16"
            android:textSize="12sp"
            android:textColor="@color/c_FF4444"
            android:background="@drawable/shape_group"
            android:paddingTop="@dimen/H4"
            android:paddingBottom="@dimen/H4"
            android:paddingLeft="@dimen/W12"
            android:paddingRight="@dimen/W12">
        </TextView>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/H70"
            android:text="@string/share_friends"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_vipPrice"
            android:layout_marginRight="@dimen/W20"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingLeft="@dimen/W20"
            android:paddingRight="@dimen/W20"
            android:textColor="@color/c_FFFFFF"
            android:background="@drawable/shape_group_share">
        </Button>
    </RelativeLayout>
</LinearLayout>