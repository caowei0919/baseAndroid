<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/W160"
    android:layout_height="@dimen/H100">

    <TextView
        android:id="@+id/tv_kind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/tab_menu_selector"
        android:textColor="@drawable/tab_menu_text_selector"
        android:textSize="12sp">
    </TextView>

    <ImageView
        android:id="@+id/img_menuBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:src="@mipmap/icon_menu_bottom">
    </ImageView>
</RelativeLayout>