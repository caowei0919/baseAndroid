<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/H120">
    </ImageView>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_not_buy_anymore"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_empty"
        android:layout_marginTop="@dimen/H50">
    </TextView>

    <ImageView
        android:id="@+id/tv_goShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/H85"
        android:background="@mipmap/icon_goshop"
        android:paddingTop="@dimen/H14"
        android:paddingBottom="@dimen/H14"
        android:paddingRight="@dimen/W42"
        android:paddingLeft="@dimen/W42">
    </ImageView>
</RelativeLayout>