<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H160"
    android:background="@drawable/shape_item_referees">

    <ImageView
        android:id="@+id/img_shopAvatar"
        android:layout_width="@dimen/W120"
        android:layout_height="@dimen/H120"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/W20"
        android:background="@drawable/shape_shop_img"
        android:src="@mipmap/img_default"
        android:padding="@dimen/W10">
    </ImageView>

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_1B1B1B"
        android:textSize="16sp"
        android:layout_alignTop="@id/img_shopAvatar"
        android:layout_marginTop="@dimen/H12"
        android:layout_toRightOf="@id/img_shopAvatar"
        android:layout_marginLeft="@dimen/W20"
        android:singleLine="true"
        android:maxWidth="@dimen/W300">
    </TextView>

    <ImageView
        android:id="@+id/img_chooseShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/choose_shop"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/img_shopAvatar"
        android:paddingTop="@dimen/H12"
        android:paddingBottom="@dimen/H12"
        android:paddingLeft="@dimen/W28"
        android:paddingRight="@dimen/W28">
    </ImageView>

    <com.zj.wz.wbyx.baseandroid.view.MarqueeTextView
        android:id="@id/tv_shopNotice"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/W28"
        android:drawablePadding="@dimen/W12"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/c_8F949C"
        android:drawableLeft="@mipmap/shop_notice"
        android:layout_alignBottom="@id/img_shopAvatar"
        android:paddingTop="@dimen/H10"
        android:paddingBottom="@dimen/H10"
        android:ellipsize="marquee"
        android:focusable="true"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_alignLeft="@id/tv_shopName">
    </com.zj.wz.wbyx.baseandroid.view.MarqueeTextView>
</RelativeLayout>