<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zj.wz.wbyx.baseandroid.view.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        app:use_type="use_padding_top"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H100"
            android:text="@string/tab_shop_car"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/c_FFFFFF"
            android:background="@color/c_FF3333">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_empty_shopcar"
            android:layout_marginTop="@dimen/H170">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_shop_car_is_so_empty"
            android:textSize="14sp"
            android:textColor="@color/c_333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/H60">
        </TextView>

        <ImageView
            android:id="@+id/img_goShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_goshop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/H80">
        </ImageView>
    </com.zj.wz.wbyx.baseandroid.view.StatusBarHeightView>
</LinearLayout>