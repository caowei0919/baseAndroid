<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/member_head"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_record_vip">
    </ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_avatar"
        android:layout_width="@dimen/W110"
        android:layout_height="@dimen/H110"
        android:layout_marginLeft="@dimen/W24"
        app:civ_border_width="@dimen/W8"
        app:civ_border_color="@color/c_FAA5A5"
        android:layout_marginTop="@dimen/H40"
        android:src="@mipmap/img_default">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/circle_avatar"
        android:layout_marginLeft="@dimen/W18"
        android:layout_alignTop="@id/circle_avatar"
        android:layout_marginTop="@dimen/H2"
        android:textSize="18sp"
        android:textColor="@color/c_FFFFFF">
    </TextView>

    <TextView
        android:id="@+id/tv_dueToTheTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/circle_avatar"
        android:layout_alignLeft="@id/tv_nickName"
        android:layout_below="@id/tv_nickName"
        android:layout_marginTop="@dimen/W20"
        android:textSize="10sp"
        android:textColor="@color/c_FFFFFF">
    </TextView>

    <ImageView
        android:id="@+id/img_vip"
        android:layout_width="@dimen/W120"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_nickName"
        android:layout_marginLeft="@dimen/W12"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/tv_nickName"
        android:src="@mipmap/user_common"></ImageView>

    <TextView
        android:id="@+id/tv_vipToReduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/circle_avatar"
        android:layout_marginTop="@dimen/H52"
        android:textColor="@color/c_FFFFFF"
        android:textSize="12sp">
    </TextView>

    <TextView
        android:id="@+id/tv_renewal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/member_renewal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_vipToReduce"
        android:textSize="14sp"
        android:paddingLeft="@dimen/W40"
        android:paddingRight="@dimen/W40"
        android:paddingTop="@dimen/H10"
        android:paddingBottom="@dimen/H10"
        android:textColor="@color/c_F95B56"
        android:layout_marginTop="@dimen/H52">
    </TextView>
</RelativeLayout>
