<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_EEEEEE">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H90">

        <TextView
            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/c_333333"
            android:gravity="center"
            android:layout_marginLeft="@dimen/W24">
        </TextView>

        <CheckBox
            android:id="@+id/checkbox_showName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/W20"
            android:text="@string/not_show_name"
            android:textColor="@color/c_666666"
            android:textSize="12sp"
            android:paddingLeft="@dimen/W24"
            android:button="@drawable/selector_default_address">
        </CheckBox>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_EEEEEE">
    </TextView>

    <com.zj.wz.wbyx.baseandroid.view.RatingBar
        android:id="@+id/ratingBar_appraise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H160"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/H100"
        app:selectedNumber="0"
        app:starDistance="12dp"
        app:starEmptyRes="@mipmap/ic_app_comm_star_nor_big"
        app:starIsFull="false"
        app:starSelectedRes="@mipmap/ic_app_comm_star_sel_big">
    </com.zj.wz.wbyx.baseandroid.view.RatingBar>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H80"
        android:background="@drawable/enable_login"
        android:layout_marginLeft="@dimen/W56"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/c_FFFFFF"
        android:layout_marginRight="@dimen/W56"
        android:text="@string/submit_appraise"
        android:layout_marginTop="@dimen/H200">
    </Button>
</LinearLayout>