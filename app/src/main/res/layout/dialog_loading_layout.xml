<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/W168"
        android:layout_height="@dimen/H168"
        android:gravity="center"
        android:orientation="vertical">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:matProg_barColor="@android:color/holo_blue_light"
            app:matProg_barWidth="@dimen/W8"
            app:matProg_circleRadius="@dimen/W72"
            app:matProg_fillRadius="false"
            app:matProg_linearProgress="false"
            app:matProg_progressIndeterminate="true"
            app:matProg_rimColor="@android:color/darker_gray"
            app:matProg_rimWidth="@dimen/W6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/H4"
            android:text="@string/please_wait"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>