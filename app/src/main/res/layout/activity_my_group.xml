<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_F1F1F1">

    <include layout="@layout/title"
        android:id="@+id/layout_title"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_group"
        app:srlPrimaryColor="@color/c_F1F1F1"
        app:srlAccentColor="@color/c_F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/H20"
            android:layout_marginLeft="@dimen/W16"
            android:layout_marginRight="@dimen/W16"
            android:layout_marginBottom="@dimen/H20">
        </android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>