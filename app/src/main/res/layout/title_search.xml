<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H88"
    android:background="@color/c_FFFFFFFF"
    android:id="@+id/ll_title"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="@dimen/H16"
    android:paddingBottom="@dimen/H16">

    <RelativeLayout
        android:id="@+id/relative_back"
        android:layout_width="@dimen/W80"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/W80"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/img_back">
        </ImageView>
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="@dimen/W1"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:ellipsize="end"
        android:drawablePadding="@dimen/W20"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType=""
        android:drawableLeft="@mipmap/img_search"
        android:paddingLeft="@dimen/W20"
        android:background="@drawable/shape_edit_search">
    </EditText>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="@dimen/W112"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/W16"
        android:layout_marginLeft="@dimen/W16"
        android:background="@drawable/shape_text_search"
        android:textColor="@color/c_FFFFFF"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/search">
    </TextView>
</LinearLayout>
