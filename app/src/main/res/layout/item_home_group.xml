<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/W150"
    android:layout_marginLeft="@dimen/W12"
    android:background="@drawable/shape_item_referees"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_goodsPicture"
        android:layout_width="@dimen/W150"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/H140"
        android:scaleType="fitXY">
    </ImageView>

    <TextView
        android:id="@+id/tv_groupNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:gravity="center"
        android:textColor="@color/c_FFFFFF"
        android:background="@mipmap/icon_home_group_num"
        android:layout_alignRight="@id/img_goodsPicture"
        android:layout_alignBottom="@id/img_goodsPicture"
        android:layout_marginBottom="@dimen/H8">
    </TextView>

    <TextView
        android:id="@+id/tv_vipPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_goodsPicture"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginTop="@dimen/H10"
        android:textSize="10sp"
        android:textColor="@color/c_FF2525">
    </TextView>

    <TextView
        android:id="@+id/tv_nomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_vipPrice"
        android:layout_alignBottom="@id/tv_vipPrice"
        android:textSize="8sp"
        android:layout_marginLeft="@dimen/W12"
        android:textColor="@color/c_8F949C">
    </TextView>
</RelativeLayout>