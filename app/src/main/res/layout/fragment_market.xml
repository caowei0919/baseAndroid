<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/H100"
        android:paddingLeft="@dimen/W40"
        android:paddingRight="@dimen/W40"
        android:visibility="gone"
        android:tag="sticky">
    </net.lucode.hackware.magicindicator.MagicIndicator>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/magic_indicator"
        android:id="@+id/recycle_allGoods"
        android:layout_marginLeft="@dimen/W15"
        android:layout_marginRight="@dimen/W15"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>